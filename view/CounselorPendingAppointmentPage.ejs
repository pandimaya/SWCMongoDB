      </nav><!-- .navbar -->

    </div>
  </div>
  </header><!-- End Header -->

  <main id="main">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-dark">
          <tr>
            <th scope="col">Time</th>
            <th scope="col">Date</th>
            <th scope="col">Email</th>
            <th scope="col">Last Name</th>
            <th scope="col">First Name</th>
            <th scope="col">Department</th>
            <th scope="col">Notes</th>
            <th scope="col">Appointed Time</th>
            <th scope="col">Appointed Date</th>
            <th scope="col">Accept</th>
            <th scope="col">Reject</th>
          </tr>
        </thead>
        <tbody>
          <% pendingAppointments.forEach((appointment) => { %>
            <tr>
              <td><%= appointment.time %></td>
              <td><%= appointment.date %></td>
              <td><%= appointment.email %></td>
              <td><%= appointment.last_name %></td>
              <td><%= appointment.first_name %></td>
              <td><%= appointment.department %></td>
              <td><%= appointment.notes %></td>
              <td><%= appointment.appointed_time %></td>
              <td><%= appointment.appointed_date %></td>
              <td>
                <button class="btn btn-success accept-appointment" data-toggle="modal" data-target="#acceptModal" data-appointment-id="<%= appointment.id %>">Accept</button>
              </td>
              <td>
                <button class="btn btn-danger reject-appointment" data-toggle="modal" data-target="#rejectModal" data-appointment-id="<%= appointment.id %>">Reject</button>
            </td>
          <% }); %>
        </tbody>
      </table>
    </div>
  </main><!-- End #main -->

