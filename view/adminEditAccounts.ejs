    <a class="nav-link" id="counselor-tab" data-bs-toggle="tab" href="#counselor" role="tab" aria-controls="counselor" aria-selected="false">Counselors</a>
  </li>
</ul>
<div class="search-container">
    <input type="text" id="searchInput" onkeyup="searchTable()" placeholder="Search">
  </div>
<div class="tab-content" id="myTabContent">
  <!-- Students Tab Content -->
  <div class="tab-pane fade show active" id="student" role="tabpanel" aria-labelledby="student-tab">
    <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Last Name</th>
          <th scope="col">First Name</th>
          <th scope="col">Birthdate</th>
          <th scope="col">Gender</th>
          <th scope="col">Email</th>
          <th scope="col">Password</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Actions</th> <!-- New column for delete button -->
        </tr>
      </thead>
      <tbody>
        <% studData.forEach((item) => { %>
          <tr data-id="<%= item.idNumber %>">
            <th scope="row"><%= item.idNumber %></th>
            <td><%= item.lastName %></td>
            <td><%= item.firstName %></td>
            <td><%= item.birthDate %></td>
            <td><%= item.gender %></td>
            <td><%= item.email %></td>
            <td><%= item.password %></td>
            <td><%= item.phoneNumber %></td>
            <td>
              <button class="btn btn-primary" onclick="editRecord('<%= item.idNumber %>', 'Student')">Edit</button>
              <button class="btn btn-danger" onclick="deleteRecord('<%= item.idNumber %>', 'Student')">Delete</button>   
            </td>
          </tr>
        <% }); %>
      </tbody>
      
    </table>
  </div>
  <!-- Counselors Tab Content -->
  <div class="tab-pane fade" id="counselor" role="tabpanel" aria-labelledby="counselor-tab">
    <table class="table table-hover">
